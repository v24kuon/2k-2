<div class="container">
  <div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
			<tbody>
				<tr>
					<td>
						<%= link_to (@books.user) do %>
						<%= attachment_image_tag(@books.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @user.name %>
						<% end %>
					</td>
					<td><%= link_to @books.title, @books %></td>
					<td><%= @books.body %></td>

					<% if @user.id == current_user.id %>
					<td><%= link_to "Edit",edit_book_path(@books), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy",@books, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
				</tr>
					<% end %>
			</tbody>
		</table>

	</div>
  </div>
</div>
